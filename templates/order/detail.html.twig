{% extends "base.html.twig" %}

{% block body %}
{# gọi biến session (được tạo ở controller) #}
{% set product = app.session.get('product') %}
{% set user = app.session.get('user') %}
<div class="container text-center mt-3">
   <div class="row">
      {# <div class="col-md-4">
         <div class="card">
            <img src="{{ product.image }}" width="240" height="240">
         </div>
      </div> #}
      <div class="col-md-8">
         <div class="card">
            <div class="card-header">
               <h1 class="text text-primary"> Order Detail </h1>
            </div>
               <div class="card-body">
                  <table class="table table-bordered">
                     <tr>
                        <th>Customer name</th>
                        <th>Product name</th>
                        <th>Product image</th>
                        <th>Order Date</th>
                        <th>Order Quantity</th>
                        <th>Product Price</th>
                        <th>Total Price</th>
                     </tr>
                     <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ product.name }}</td>
                        <td class="card">
                            <img src="{{ product.image }}" width="100" height="100">
                        </td>
                        <td>{{ app.session.get('datetime') | date ('d/m/Y H:i:s')}}</td>
                        <td>{{ app.session.get('quantity') }} </td>         
                        <td>{{ product.price }} $ </td>
                        <td class="text text-danger">{{ app.session.get('totalprice') }} $ </td>
                     </tr>
                  </table>
               </div>  
         </div>
      </div>
   </div>
</div>
{% endblock %}