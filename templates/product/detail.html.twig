{% extends "base.html.twig" %}

{% block body %}
{# <div class="container col-md-8 mt-3"> #}
<div class="container">
   <div class="row">
      <div class="col-md-4">
         <div class="card">
            <img src="{{ product.image }}" width="240" height="240">
         </div>
      </div>
      <div class="col-md-8">
         <div class="card">     
         <table class="table table-bordered">      
            <th colspan="2" class="bg-success text-warning">Category Detail</th>
            {% if product.quantity >= 1 %}
               <div class="card-body">
                  <table class="table table-bordered">
                     <tr>
                        <th >Name</th>
                        <td><p class="text">{{ product.name }}</p></td>
                     </tr>
                     <tr>   
                        <th >Price</th>
                        <td><p class="text">{{ product.price }} $ </p></td>
                     </tr>
                     <tr>    
                        <th >Description</th>
                        <td><p class="text">{{ product.description }} </p></td>
                     </tr>
                     <tr>    
                        <th >Quantity</th>
                        <td><p class="text">{{ product.quantity }} </p></td>
                     </tr>
                     <tr>    
                        <th >Category </th>
                        <td> <p class="text">
                              {% if product.category != null %}
                                 <a href="{{ path('category_detail', {'id': product.category.id })}}">
                                 {{ product.category.name }} 
                              </a>
                              {% else %}
                                  N/A
                              {% endif %}
                        </p></td>         
                     </tr>
         </table>
         </div>
            {% else %}
               <table class="table table-bordered">
                    <div class="card-body">
                  <table class="table table-bordered">
                     <tr>
                        <th >Name</th>
                        <td><p class="text">{{ product.name }}</p></td>
                     </tr>
                     <tr>   
                        <th >Price</th>
                        <td><p class="text">{{ product.price }} $ </p></td>
                     </tr>
                     <tr>    
                        <th >Description</th>
                        <td><p class="text">{{ product.description }} </p></td>
                     </tr>
                     <tr>    
                        <th >Quantity</th>
                        <td><p class="text">{{ product.quantity }} </p></td>
                     </tr>
                     <tr>    
                        <th >Category </th>
                        <td> <p class="text">
                              {% if product.category != null %}
                                 <a href="{{ path('category_detail', {'id': product.category.id })}}">
                                 {{ product.category.name }} 
                              </a>
                              {% else %}
                                  N/A
                              {% endif %}
                        </p></td>         
                     </tr>
                  </table>
            {% endif %}       
         </div>
      </div>
   </div>
</div>
{% endblock %}