{# giao diện dạng bảng cho admin quản lý #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="3" class="text text-danger"><h1>Product List</h1></th>
        <th>
            <a href="{{ path('product_add') }}">
                <img src={{ asset('icons8-add-64.png') }} width="50" height="50">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-primary">Product Id</th>
        <th class="text text-primary">Product Title</th>
        <th class="text text-primary">Product Image</th>
        <th class="text text-primary">Actions</th>
    </tr>
    {% for product in products %}
    <tr>
        <td class="text text-success">{{ product.id }}</td>
        <td class="text text-success">{{ product.name}}</td>
        <td>
            <a href="{{ path('product_detail', {'id' : product.id }) }}">
                <img src="{{ product.image }}" width="100" height="120">
            </a>
        </td>
        <td>
            <a href="{{ path('product_detail', {'id' : product.id }) }}">
                <img src="{{ asset('icons8-more-details-100.png')}}" width="50" height="50">
            </a>
            <a href="{{ path('product_edit', {'id' : product.id }) }}">
                <img src="{{ asset('icons8-edit-60.png')}}" width="50" height="50">
            </a>
            <a href="{{ path('product_delete', {'id' : product.id }) }}"
             onclick="return confirm('Are you sure to delete this product ?');"
            >
                <img src="{{ asset('icons8-delete-90.png')}}" width="50" height="50">
            </a>
        </td>
    </tr>
    {% endfor %}
</table>
</div>
{% endblock %}