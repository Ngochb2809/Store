{# giao diện dạng bảng cho admin quản lý #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="3" class="text text-danger"><h1>Category List</h1></th>
        <th>
            <a href="{{ path('category_add') }}">
                <img src={{ asset('icons8-add-64.png') }} width="50" height="50">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-primary">Category Id</th>
        <th class="text text-primary">Category Name</th>
        <th class="text text-primary">Actions</th>
    </tr>
    {% for category in categorys %}
    <tr>
        <td class="text text-success">{{ category.id }}</td>
        <td class="text text-success">{{ category.name }}</td>
        <td>
            <a href="{{ path('category_detail', {'id' : category.id }) }}">
                {# <img src="{{ category.image }}" width="100" height="120"> #}
            </a>

        </td>
        <td>
            <a href="{{ path('category_detail', {'id' : category.id }) }}">
                <img src="{{ asset('icons8-more-details-100.png')}}" width="50" height="50">
            </a>
            <a href="{{ path('category_edit', {'id' : category.id }) }}">
                <img src="{{ asset('icons8-edit-60.png')}}" width="50" height="50">
            </a>
            <a href="{{ path('category_delete', {'id' : category.id }) }}">
                <img src="{{ asset('icons8-delete-90.png')}}" width="50" height="50">
            </a>
        </td>
    </tr>
    {% endfor %}
</table>
</div>
{% endblock %}
